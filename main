import random

print("ğŸ¯ Welcome to the Number Guessing Game!")
print("I'm thinking of a number between 1 and 100.")
mode = input("Choose your difficulty level. Type 'easy' or 'hard': ").lower()

num = random.randint(1, 100)

if mode == "easy":
    attempt = 10
elif mode == "hard":
    attempt = 5
else:
    print("ğŸ˜µ Oops! Invalid difficulty mode. Please restart and type 'easy' or 'hard'.")
    attempt = 0

for i in range(attempt):
    print(f"\nğŸ•µï¸ You have {attempt - i} attempts remaining.")
    guess = int(input("ğŸ¤” Guess a number: "))

    if guess == num:
        print("ğŸ‰ Your Guess was correct! Congrats!!! YAYYYYYYYYYYYY!!! ğŸ‰")
        break

    diff = abs(num - guess)

    if guess < num:
        if diff <= 5:
            print("ğŸ“‰ Your guess is a bit lower... you're *really* close!")
        else:
            print("ğŸ“‰ Your guess is highly lower than the number. Warm up those brain cells!")
    else:
        if diff <= 5:
            print("ğŸ“ˆ Your guess is a bit higher... almost there!")
        else:
            print("ğŸ“ˆ Your guess is highly higher than the number. Chill! Come back down!")

    if i == attempt - 1:
        print(f"\nğŸ’¥ Your attempts are over! Better luck next time.\nğŸ” The correct number was: {num}")
